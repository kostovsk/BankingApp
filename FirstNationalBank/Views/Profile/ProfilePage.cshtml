
@{
    ViewData["Title"] = "ProfilePage";
}

<link rel="stylesheet" href="~/css/profile.css">

<div class="sidebar">
    <div>
        <a id="add-name"></a>
        <a id="add-address"></a>
        <a id="add-phone"></a>
        <a id="add-email"></a>
    </div>
</div>

<div class="main">
    <h2>Welcome to your Account!</h2>
    <div class="header">
        <h4>Account Number: <a id="add-account"></a></h4>
    </div>

    <div style="display: inline-block">
        <h4>Available Balance: <a id="add-balance"></a></h4>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group mr-2">
            <button type="submit" id="deposit" onclick="openDepositTransactionForm()">Deposit</button>
        </div>
        <div class="btn-group mr-2">
            <button type="submit" id="withdrawal" onclick="openWithdrawalTransactionForm()">Withdrawal</button>
        </div>
        <div class="btn-group mr-2">
            <button type="submit" id="transactions" onclick="getTransactions()">Transactions</button>
        </div>
    </div>
    <br />
    <div id="transactionForm" style="display:none; max-width:220px;">
        <form action="javascript:void(0);" method="POST" onsubmit="addTransaction()" style="display:flex; flex-direction:column;">
            <input type="hidden" value="credit" id="add-type" />
            <label>Amount: </label>
            <input type="text" id="amount"><br />
            <label>Notes: </label>
            <input type="text" id="notes"><br />
            <input type="submit" id="submit-btn" value="Complete">
        </form>
    </div>
    <br />
    <div id="table" style="display:none">
        <table>
            <tr>
                <th>Date: </th>
                <th>Type: </th>
                <th>Amount: </th>
                <th>Description: </th>
            </tr>
            <tbody id="transaction"></tbody>
        </table>

    </div>
</div>

<script src="~/js/profile.js" asp-append-version="true"></script>
<script type="text/javascript">
    getAccount();
</script>